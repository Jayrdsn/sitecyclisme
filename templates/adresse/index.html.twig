{% extends 'base.html.twig' %}

{% block title %}Adresse index{% endblock %}

{% block body %}
    <h1>Adresse index</h1>

    <table id="table_id" class="table">
        <thead class="thead-dark">
            <tr>
                <th>IdAdresse</th>
                <th>Nrue</th>
                <th>Rue</th>
                <th>Codepostal</th>
                <th>Ville</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for adresse in adresses %}
            <tr>
                <td>{{ adresse.idAdresse }}</td>
                <td>{{ adresse.nrue }}</td>
                <td>{{ adresse.rue }}</td>
                <td>{{ adresse.codepostal }}</td>
                <td>{{ adresse.ville }}</td>
                <td>
                    <a style="text-decoration-color: red" href="{{ path('adresse_show', {'idAdresse': adresse.idAdresse}) }}">show</a>
                    <a href="{{ path('adresse_edit', {'idAdresse': adresse.idAdresse}) }}">edit</a>
                </td>
            </tr>
        {% else %}

            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-danger">
        <a href="{{ path('adresse_new') }}">Create new</a>
    </button>
    
{% endblock %}
