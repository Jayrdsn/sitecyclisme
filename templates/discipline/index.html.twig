{% extends 'base.html.twig' %}

{% block title %}Discipline index{% endblock %}

{% block body %}
    <h1>Discipline index</h1>

    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Libelle</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for discipline in disciplines %}
            <tr>
                <td>{{ discipline.id }}</td>
                <td>{{ discipline.libelle }}</td>

                <td>
                    <a href="{{ path('discipline_show', {'id': discipline.id}) }}">show</a>
                    <a href="{{ path('discipline_edit', {'id': discipline.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-danger">
        <a href="{{ path('discipline_new') }}">Create new</a>
    </button>
{% endblock %}
